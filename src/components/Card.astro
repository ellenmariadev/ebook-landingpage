---
const { number, title, body } = Astro.props;
---

<li class="card">
  <span>
    {number}
  </span>
  <div>
    <h2>
      {title}
    </h2>
    <p>
      {body}
    </p>
  </div>
</li>

<style>
  .card {
    list-style: none;
    display: flex;
    gap: 1rem;
    align-items: start;
  }
  span {
    background-color: rgba(126, 217, 87, 0.46);
    padding: .2rem 0.4rem;
    border-radius: 50%;
    font-weight: 700;
    font-size: 1.5rem;
    color: #0d9955;
	position: relative;
	z-index: 999;
  }
  span::before {
	content: "";
	position: absolute;
	left: 19px;
	top: 40px;
    width: 1px;
    height: 56px;
    color: black;
    background-color: black;
  }
  h2 {
    font-size: 1rem;
    font-weight: 700;
    letter-spacing: 3.96px;
    text-transform: uppercase;
  }
  p {
	font-weight: 300;
	margin-top: .5rem;
	font-style: italic;
  }
</style>
